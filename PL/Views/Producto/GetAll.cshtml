@model ML.Producto
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetAll</h2>
<div class="container">
    <div class="row">
        <div style="float:right; margin-bottom:1rem;">
            @Html.ActionLink("+", "Form", "Producto", htmlAttributes: new { @class = "btn btn-success" })
        </div>

        <table class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <td>Editar</td>
                    <td class="hidden">IdProducto</td>
                    <td>Nombre</td>
                    <td>Precio Unitario</td>
                    <td>Codigo de Barras</td>
                    <td>Imagen</td>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Producto producto in Model.Productos)
                {
                    <tr>
                        <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Producto", new { IdProducto = producto.IdProducto })"></a></td>
                        <td class="hidden">@producto.IdProducto</td>
                        <td>@producto.Nombre</td>
                        <td>@producto.PrecioUnitario</td>
                        <td>@producto.CodigoDeBarras</td>

                        @if (producto.Imagen != null)
                        {
                            <td><img src="data:image/jpeg;base64,@Convert.ToBase64String(producto.Imagen)" style=" height:140px; width:140px;" /></td>
                        }
                        else
                        {
                            <td><img src="~/Content/Sin_Image.jpg" style=" height:140px; width:140px;" /></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <script src="../../Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
</div>